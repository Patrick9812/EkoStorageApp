{% extends 'base.html.twig' %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen w-full bg-[#124278]">
		<div class="w-full max-w-md p-8 bg-white rounded-2xl shadow-2xl border border-white/20">
			<h1 class="text-3xl font-black text-center text-slate-800 mb-8 tracking-tighter">
				Magazyn Eko-Okna
			</h1>

			<form method="post" class="space-y-6">
				{% if error %}
					<div class="p-4 rounded-lg bg-red-50 text-red-700 text-sm font-medium border border-red-100">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				<div>
					<label class="block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1">Login</label>
					<input type="text" name="username" value="{{ last_username }}" class="w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all">
				</div>

				<div>
					<label class="block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1">Hasło</label>
					<input type="password" name="password" class="w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all">
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button type="submit" class="w-full py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg shadow-indigo-200 transition-all active:scale-[0.98]">
					Zaloguj się
				</button>
			</form>
		</div>
	</div>
{% endblock %}
