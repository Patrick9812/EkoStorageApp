{% extends 'base.html.twig' %}

{% block title %}Nowy Artykuł
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen w-full bg-[#124278] pt-[60px] pb-[60px]">
		<div class="w-full max-w-md p-8 bg-white rounded-2xl shadow-2xl border border-white/20">
			<h1 class="text-3xl font-black text-center text-slate-800 mb-2 tracking-tighter">Nowy Artykuł</h1>
			<p class="text-center text-slate-500 text-sm mb-8 font-medium">Dodaj nowy przedmiot do bazy magazynowej</p>

			{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}

			<div>
				{{ form_label(form.name, 'Nazwa Artykułu', {'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}}) }}
				{{ form_widget(form.name, {
                    'attr': {'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border ' ~ (form.name.vars.valid ? 'border-slate-200' : 'border-red-500') ~ ' focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all', 'placeholder': 'np. Śruba M8'}
                }) }}
				{% if not form.name.vars.valid %}
					<div class="text-red-600 text-[10px] mt-1 font-bold italic list-none">{{ form_errors(form.name) }}</div>
				{% endif %}
			</div>

			<div>
				{{ form_label(form.code, 'Kod artykułu', {'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}}) }}
				{{ form_widget(form.code, {
                    'attr': {'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border ' ~ (form.code.vars.valid ? 'border-slate-200' : 'border-red-500') ~ ' focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all', 'placeholder': 'ART-123-X'}
                }) }}
				{% if not form.code.vars.valid %}
					<div class="text-red-600 text-[10px] mt-1 font-bold italic list-none">{{ form_errors(form.code) }}</div>
				{% endif %}
			</div>

			<div>
				{{ form_label(form.unit, 'Jednostka miary', {'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}}) }}
				{{ form_widget(form.unit, {
                    'attr': {'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border ' ~ (form.unit.vars.valid ? 'border-slate-200' : 'border-red-500') ~ ' focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all', 'placeholder': 'szt'}
                }) }}
				{% if not form.unit.vars.valid %}
					<div class="text-red-600 text-[10px] mt-1 font-bold italic list-none">{{ form_errors(form.unit) }}</div>
				{% endif %}
			</div>

			<div class="pt-2">
				{{ form_widget(form.submit, {'label': 'Utwórz artykuł', 'attr': {'class': 'w-full py-4 bg-[#16a603] hover:bg-[#0e6b02] text-white font-bold rounded-xl shadow-lg shadow-green-200 transition-all active:scale-[0.98]'}}) }}
			</div>

			<div class="text-center mt-4">
				<a href="{{ path('app_admin_dashboard') }}" class="text-xs font-bold text-slate-600 uppercase tracking-widest hover:text-indigo-800 transition-colors">Powrót do panelu</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
