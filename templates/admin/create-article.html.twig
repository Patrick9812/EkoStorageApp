{% extends 'base.html.twig' %}

{% block title %}Stwórz artykuł
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen w-full bg-[#124278] pt-[60px] pb-[60px]">
		<div class="w-full max-w-md p-8 bg-white rounded-2xl shadow-2xl border border-white/20">
			<h1 class="text-3xl font-black text-center text-slate-800 mb-2 tracking-tighter">
				Nowy Artykuł
			</h1>
			<p class="text-center text-slate-500 text-sm mb-8 font-medium">Dodaj nowy przedmiot do bazy magazynowej</p>

			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			{# Pole: Nazwa #}
			<div>
				{{ form_label(form.name, 'Nazwa Artykułu', {
                        'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}
                    }) }}
				{{ form_widget(form.name, {
                        'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all',
                            'placeholder': 'Wpisz nazwę artykułu'
                        }
                    }) }}
			</div>

			{# Pole: Kod #}
			<div>
				{{ form_label(form.code, 'Kod artykułu', {
                        'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}
                    }) }}
				{{ form_widget(form.code, {
                        'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all',
                            'placeholder': 'Wpisz kod artykułu'
                        }
                    }) }}
			</div>

			<div>
				{{ form_label(form.unit, 'Jednostka miary', {
                        'label_attr': {'class': 'block text-xs font-bold uppercase tracking-wider text-slate-500 mb-1'}
                    }) }}
				{{ form_widget(form.unit, {
                        'attr': {
                            'placeholder': 'Wpisz kod artykułu',
                            'class': 'w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all'
                        }
                    }) }}
			</div>

			<div class="pt-2">
				{{ form_widget(form.submit, {
                        'label': 'Utwórz artykuł',
                        'attr': {
                            'class': 'w-full py-4 bg-[#16a603] hover:bg-[#0e6b02] text-white font-bold rounded-xl shadow-lg shadow-green-200 transition-all active:scale-[0.98]'
                        }
                    }) }}
			</div>
			<div class="text-center mt-4">
				<a href="{{ path('app_admin_dashboard') }}" class="text-xs font-bold text-black-600 uppercase tracking-widest hover:text-indigo-800 transition-colors">
					Powrót do panelu
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
